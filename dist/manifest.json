 {
  "manifest_version": 4,
  "name": "넷플릭스 이중자막",
  "description" : "넷플릭스에서 이중자막을 이용할 수 있습니다.",
  "version": "0.1.11",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "run_at": "document_end",
      "js": ["content_script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["page_script.js"],
      "matches": ["https://www.netflix.com/*"]}
  ]
 }
